
[diff]
  tool = p4merge
[difftool]
  prompt = false
[difftool "p4merge"]
  trustExitCode = false

[merge]
  tool = p4merge
[mergetool]
  prompt = false
[mergetool "p4merge"]
  keepTemporaries = false
  trustExitCode = false
  keepBackup = false

[core]
  autocrlf = input
  safecrlf = false

[push]
  default = simple

[alias]
  l = log --color --graph --all --oneline --decorate
  s = status -sb
  d = difftool -y
  m = mergetool -y

[pull]
  ff = only
